{
  "name": "pagina-recados-arquitetura",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only ./src/index.ts",
    "build": "npx tsc",
    "start": "node ./dist/index.js",
    "migration:create": "typeorm migration:create src/database/migrations/CreateTable",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d ./src/main/configs/database.config.ts",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -- -d ./src/main/configs/database.config.ts",
    "migration:generate:test": "cross-env NODE_ENV=test npm run typeorm migration:generate -- -d ./src/main/configs/database.config.ts ./tests/app/shared/migrations/TestMigration",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d ./src/main/configs/database.config.ts",
    "migration:run:test": "rimraf ./databaseTest.sqlite && cross-env NODE_ENV=test npm run migration:run",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d ./src/main/configs/database.config.ts",
    "test": "jest --silent --noStackTrace --runInBand",
    "test:unit": "jest -c jest.unit.config.ts --silent --noStackTrace --runInBand",
    "test:unit:verbose": "jest -c jest.unit.config.ts --verbose --runInBand --detectOpenHandles",
    "test:unit:coverage": "jest -c jest.unit.config.ts --silent --noStackTrace --runInBand --coverage",
    "test:unit:watch": "jest -c jest.unit.config.ts --silent --noStackTrace --runInBand --watchAll",
    "test:integration": "cross-env NODE_ENV=test jest -c jest.integration.config.ts --silent --noStackTrace --runInBand",
    "test:integration:verbose": "cross-env NODE_ENV=test jest -c jest.integration.config.ts --verbose --runInBand --detectOpenHandles",
    "test:integration:coverage": "cross-env NODE_ENV=test jest -c jest.integration.config.ts --silent --noStackTrace --runInBand --coverage",
    "test:integration:watch": "cross-env NODE_ENV=test jest -c jest.integration.config.ts --silent --noStackTrace --runInBand --watchAll",
    "test:verbose": "cross-env NODE_ENV=test jest --silent --verbose --runInBand --detectOpenHandles",
    "test:coverage": "cross-env NODE_ENV=test jest  --silent --noStackTrace --runInBand --coverage",
    "test:watch": "cross-env NODE_ENV=test jest  --silent --noStackTrace --runInBand --watchAll",
    "typeorm": "typeorm-ts-node-commonjs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.16.2",
    "@types/pg": "^8.10.1",
    "@types/reflect-metadata": "^0.1.0",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.1",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.1",
    "sqlite3": "^5.1.6",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "jest": "^29.5.0",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.16",
    "uuid": "^9.0.0"
  }
}
